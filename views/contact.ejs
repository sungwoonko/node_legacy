<%-include('layouts/header.ejs')%>

    <section class="contact-section">  
        <h2 class="section-title">문의하기</h2>  
        <form action="api/contact" method="post" class="contact-form">  
        <ul class="form-list">  
            <li>  
            <label for="name">이름</label>  
            <input type="text" id="name" name="name" placeholder="이름을 입력하세요" required>  
            </li>  
            <li>  
            <label for="phone">연락처</label>  
            <input type="text" id="phone" name="phone" placeholder="연락처를 입력하세요" required>  
            </li>  
            <li>  
            <label for="email">이메일</label>  
            <input type="email" id="email" name="email" placeholder="example@email.com" required>  
            </li>  
            <li>  
            <label for="memo">문의내용</label>  
            <textarea id="memo" name="memo" cols="50" rows="6" placeholder="문의 내용을 입력하세요" required></textarea>  
            </li>  
            <li>  
            <button type="submit" class="submit-button">문의하기</button>  
            </li>  
        </ul>  
        </form>  
    </section>

<%-include('layouts/footer.ejs')%>